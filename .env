# .env.example - À copier en .env et remplir avec vos valeurs

# ==================== WAYNIUM CONFIG ====================
# URL API Waynium (staging ou prod)
WAYNIUM_API_URL=https://stage-gdsapi.waynium.net/api-externe/set-ressource
# WAYNIUM_API_URL=https://gdsapi.waynium.net/api-externe/set-ressource  # PROD

# Credentials Waynium (fournis lors de la réunion)
WAYNIUM_API_KEY=abllimousines
WAYNIUM_API_SECRET=be5F47w72eGxwWe8EAZe9Y4vP38g2rRG

# ==================== WEBHOOK CONFIG ====================
# API Keys autorisées pour les webhooks Carey (séparées par virgule)
WEBHOOK_API_KEYS=1,your_production_key_here

# Secret pour validation signature HMAC (optionnel, si Carey le fournit)
# CAREY_WEBHOOK_SECRET=your_hmac_secret_here

# ==================== APP CONFIG ====================
# Port d'écoute Flask
PORT=5000

# Mode debug (false en production!)
DEBUG=false

# Version de l'API
VERSION=2.0.0

# Timeout requêtes vers Waynium (secondes)
REQUEST_TIMEOUT=15

# Nombre de tentatives en cas d'échec
MAX_RETRIES=3

# Mode queue asynchrone (true recommandé pour production)
# true = réponse 202 immédiate, traitement en background
# false = traitement synchrone, réponse après Waynium
ENABLE_QUEUE=true

# ==================== LOGGING ====================
# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Fichier de log (optionnel, par défaut stdout)
# LOG_FILE=/var/log/carey-waynium-api/app.log
